<!-- Vertical Orientation is set  with weightSum-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >


        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <Button
                        android:id="@+id/buttonMantras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_shape_gradient"
                        android:drawableTop="@drawable/download"
                        android:fontFamily="sans-serif-medium"
                        android:text="Mantras"
                        android:textAlignment="center"
                        android:padding="8dp"
                        android:scaleType="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

                </RelativeLayout>

            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <Button
                        android:id="@+id/buttonFamilyTime"
                        android:layout_marginTop="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_shape_gradient"
                        android:drawableTop="@drawable/download"
                        android:fontFamily="sans-serif-medium"
                        android:text="Family Time"
                        android:textAlignment="center"
                        android:padding="8dp"
                        android:scaleType="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <Button
                        android:id="@+id/buttonMeTime"
                        android:layout_marginTop="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_shape_gradient"
                        android:drawableTop="@drawable/download"
                        android:fontFamily="sans-serif-medium"
                        android:text="Me Time"
                        android:textAlignment="center"
                        android:padding="8dp"
                        android:scaleType="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

                </RelativeLayout>

            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <Button
                        android:id="@+id/buttonHappyTime"
                        android:layout_marginTop="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_shape_gradient"
                        android:drawableTop="@drawable/download"
                        android:fontFamily="sans-serif-medium"
                        android:text="Happy Time"
                        android:textAlignment="center"
                        android:padding="8dp"
                        android:scaleType="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

                </RelativeLayout>

            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <Button
                        android:id="@+id/buttonBoostUpTime"
                        android:layout_marginTop="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_shape_gradient"
                        android:drawableTop="@drawable/download"
                        android:fontFamily="sans-serif-medium"
                        android:text="Boost Up Time"
                        android:textAlignment="center"
                        android:padding="8dp"
                        android:scaleType="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

                </RelativeLayout>

            </TableRow>

        </TableLayout>

    </ScrollView>
</LinearLayout>